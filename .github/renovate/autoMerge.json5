{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      matchDatasources: [
        "docker",
        "github-tags"
      ],
      automerge: true,
      automergeType: "branch",
      ignoreTests: true,
      platformCommit: true,
      matchUpdateTypes: [
        "minor",
        "patch",
      ],
      matchPackageNames: [
        "renovatebot/github-action",
        "ghcr.io/larivierec/cloudflare-ddns",
        "ghcr.io/larivierec/tf-runner",
        "ghcr.io/home-operations/sonarr",
        "ghcr.io/home-operations/radarr"
      ]
    },
  ]
}
